<div class="row">
	<div class="col-md-8">

		<% if @articles.any? %>
			<ul class="list-group media-list media-list-stream">
				<%= render @articles %>
			</ul>
			<!-- pagination here  -->
		<% else %>
			<h3>Posts (0)</h3>
		<% end %>

	</div>

	<div class="col-md-4">

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Tag Cloud</h3>
			</div>
			<div class="panel-body">
				<% @tags.each do |tag| %>
					<%= link_to tag.name, tag_path(tag) %>
				<% end %>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Hot Articles</h3>
			</div>
			<div class="panel-body">
				<ul>
					<% @popular_articles.each do |popular| %>
						<li><%= link_to popular.title, popular %></li>
					<% end %>
				</ul>
			</div>
		</div>

	</div>
</div>