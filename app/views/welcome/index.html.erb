<div class="jumbotron">
  <h1>Hello, world!</h1>
  <p>This is a simple hero unit, a simple jumbotron-style component for calling 
  	extra attention to featured content or information.
  </p>
	<%= link_to articles_path, controller: 'articles', class: "btn btn-primary" do %>
		Read More <span class="fa fa-arrow-right"></span>
	<% end %>
</div>

<div class="row">
	<div class="col-md-12">
		<% if @articles.any? %>
			<ul class="list-group media-list media-list-stream">
				<%= render @articles %>
			</ul>
			<!-- pagination here  -->
		<% else %>
			<h3>Posts (0)</h3>
		<% end %>
	</div>
	<div class="col-md-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Tag Cloud</h3>
			</div>
			<div class="panel-body">
				<% @tags.each do |tag| %>
					<%= link_to tag.name, tag_path(tag) %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Hot Articles</h3>
			</div>
			<div class="panel-body">
				<ul>
					<% @popular_articles.each do |popular| %>
						<li><%= link_to popular.title, popular %></li>
					<% end %>
				</ul>
			</div>
		</div>		
	</div>
</div>